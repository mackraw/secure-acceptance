<h2>Secure Acceptance - Checkout API</h2>
<div class="container card">
    <div class="card-body">
        <h3>Payment Details</h3>
        <form id="payment_form" action="secureAcceptanceCheckout/confirmation" method="post">
            <input type="hidden" name="access_key" value="<%- accessKey %>" />
            <input type="hidden" name="profile_id" value="<%- profileId %>" />
            <input type="hidden" name="transaction_uuid" value="<%- uuid %>"" />
            <input
                type="hidden"
                name="signed_field_names"
                value="access_key,profile_id,transaction_uuid,signed_field_names,unsigned_field_names,signed_date_time,locale,transaction_type,reference_number,amount,currency,payment_method,bill_to_forename,bill_to_surname,bill_to_email,bill_to_phone,bill_to_address_line1,bill_to_address_city,bill_to_address_state,bill_to_address_postal_code,bill_to_address_country,item_0_code,item_0_sku,item_0_name,item_0_quantity,item_0_unit_price,item_1_code,item_1_sku,item_1_name,item_1_quantity,item_1_unit_price,line_item_count" />
            <input type="hidden" name="unsigned_field_names" value="card_type,card_number,card_expiry_date" />
            <input
                type="hidden"
                name="signed_date_time"
                value="<%= new Date(Date.now()).toISOString().slice(0, 19) + 'Z'; %>" />
            <input type="hidden" name="locale" value="en" />
            <div id="paymentDetailsSection">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="transaction_type">transaction_type:</label>
                    <div class="col-sm-8">
                        <select class="form-control" name="transaction_type" id="transaction_type">
                            <option value="authorization">authorization</option>
                            <option value="authorization,create_payment_token">
                                authorization,create_payment_token
                            </option>
                            <option value="authorization,update_payment_token">
                                authorization,update_payment_token
                            </option>
                            <option value="sale,create_payment_token">sale,create_payment_token</option>
                            <option value="sale,update_payment_token">sale,update_payment_token</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="reference_number">reference_number:</label>
                    <div class="col-sm-8">

                    <input
                        class="form-control"
                        type="text"
                        name="reference_number"
                        size="34"
                        value="SA_SOP_nodejs" />
                        </div>
                </div>
                <div class="form-row col-md-6" id="dynamicInputContainer"></div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="amount">amount:</label>
                    <div class="col-sm-8"><input class="form-control" type="text" name="amount" size="34" value="55.55" /></div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="currency">currency:</label>
                    <div class="col-sm-8"><input class="form-control" type="text" name="currency" size="34" value="USD" /></div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="payment_method">payment_method:</label>
                    <div class="col-sm-8"><input class="form-control" type="text" name="payment_method" size="34" value="card" /></div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="bill_to_forename">bill_to_forename:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="bill_to_forename" size="34" value="John" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="bill_to_surname">bill_to_surname:</label>
                    <div class="col-sm-8"><input class="form-control" type="text" name="bill_to_surname" size="34" value="Doe" /></div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="bill_to_email">bill_to_email:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="bill_to_email" size="34" value="null@visa.com" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="bill_to_phone">bill_to_phone:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="bill_to_phone" size="34" value="1231231234" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="bill_to_address_line1">bill_to_address_line1:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="bill_to_address_line1" size="34" value="666 6th St" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="bill_to_address_city">bill_to_address_city:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="bill_to_address_city" size="34" value="Austin" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="bill_to_address_state">bill_to_address_state:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="bill_to_address_state" size="34" value="TX" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="bill_to_address_postal_code">bill_to_address_postal_code:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="bill_to_address_postal_code" size="34" value="78758" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="bill_to_address_country">bill_to_address_country:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="bill_to_address_country" size="34" value="US" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="item_0_code">item_0_code:</label>
                    <div class="col-sm-8"><input class="form-control" type="text" name="item_0_code" size="34" value="99" /></div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="item_0_sku">item_0_sku:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="item_0_sku" size="34" value="5678909876534567" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="item_0_name">item_0_name:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="item_0_name" size="34" value="Super Duper Stuff" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="item_0_quantity">item_0_quantity:</label>
                    <div class="col-sm-8"><input class="form-control" type="text" name="item_0_quantity" size="34" value="1" /></div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="item_0_unit_price">item_0_unit_price:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="item_0_unit_price" size="34" value="43.21" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="item_1_code">item_1_code:</label>
                    <div class="col-sm-8"><input class="form-control" type="text" name="item_1_code" size="34" value="101" /></div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="item_1_sku">item_1_sku:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="item_1_sku" size="34" value="1394584739358393048" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="item_1_name">item_1_name:</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="item_1_name" size="34" value="Something Cool" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="item_1_quantity">item_1_quantity:</label>
                    <div class="col-sm-8"><input class="form-control" type="text" name="item_1_quantity" size="34" value="1" /></div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="item_1_unit_price">item_1_unit_price:</label>
                    <div class="col-sm-8"><input class="form-control" type="text" name="item_1_unit_price" size="34" value="12.34" /></div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="line_item_count">line_item_count:</label>
                    <div class="col-sm-8"><input class="form-control" type="text" name="line_item_count" size="34" value="2" /></div>
                </div>
            </div>
            <input class="btn btn-primary" type="submit" id="submit" name="submit" value="Submit" />
        </form>
    </form>
</div>
<script>
    const transactionTypeElement = document.getElementById('transaction_type');
    transactionTypeElement.addEventListener('change', () => {
        const dynamicInputContainer = document.getElementById('dynamicInputContainer');
        const targetString = 'payment_token';
        const signedFieldsElement = document.querySelector('[name="signed_field_names"]');

        if (transactionTypeElement.value.includes('update_payment_token')) {
            // Create new label element
            const labelElement = document.createElement('label');
            labelElement.classList = 'col-sm-4 col-form-label';
            labelElement.for = targetString;
            labelElement.innerText = targetString;

            // Create new input field
            const inputField = document.createElement('input');
            inputField.type = 'text';
            inputField.classList = 'form-control';
            inputField.value = '';
            inputField.name = targetString;

            // Create div to wrap the input element
            const inputWrapper = document.createElement('div');
            inputWrapper.classList = 'col-sm-8';
            inputWrapper.appendChild(inputField);

            // Append to the container
            dynamicInputContainer.innerHTML = ''; // Clear previous content
            dynamicInputContainer.classList = 'form-group row';
            dynamicInputContainer.appendChild(labelElement);
            dynamicInputContainer.appendChild(inputWrapper);

            // append to signed filed names
            signedFieldsElement.value += ',payment_token';
        } else {
            // Clear the container and update signed fields list if a different option is selected
            dynamicInputContainer.innerHTML = '';
            if (signedFieldsElement.value.slice(-14) === ',payment_token') {
                signedFieldsElement.value = signedFieldsElement.value.slice(0,-14);
            };
        }
    });
</script>
